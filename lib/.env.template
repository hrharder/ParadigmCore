# Environment (single or multi node)
NODE_ENV=development

# Configuration for Ethereum peg and rebalancer
WEB3_PROVIDER=wss://ropsten.infura.io/ws
PERIOD_LENGTH=4
PERIOD_LIMIT=75000
STAKE_CONTRACT_ADDR=0xd93480d0066916ef3fa965acc2eec83477786589
FINALITY_THRESHOLD=1
CONF_THRESHOLD=1

# Endpoints for ABCI/RPC
ABCI_HOST="localhost"
ABCI_RPC_PORT=26657

# Public/private ports for ABCI, RPC, and WS servers
ABCI_PORT=26658
API_PORT=4243
WS_PORT=4242

# Encoding types for order server-side transport 
IN_ENC=utf8
OUT_ENC=base64

# Encoding type for ABCI transaction signatures
SIG_ENC=hex

# Transaction broadcast mode: async, sync, or commit
TX_MODE=sync

# Validator keys (from .tendermint/config/priv_validator.json)
PRIV_KEY=
PUB_KEY=
NODE_ID=